@model Infraestructure.Models.ReservaAreaComun

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Save", "ReservaAreaComun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div id="lista">
    <div class="form-horizontal">
        <h4>Reserva de Area Común</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdReserva)
        @Html.HiddenFor(model => model.IdResidencia)
        @Html.HiddenFor(model => model.Estado)

        <div class="form-group">
            @Html.LabelFor(model => model.AreaComun, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AreaComun,
                   (SelectList)ViewBag.AreasComunes,
                   "Seleccione un area comun",
                   htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AreaComun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaSolicitud, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaSolicitud, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                                    @Value = DateTime.Now.ToString("yyyy-MM-dd"),
                        @readonly = "readonly"
                    }
                })
                @Html.ValidationMessageFor(model => model.FechaSolicitud, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaReserva, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaReserva, new { htmlAttributes = new { @class = "datepicker" } })
                @Html.ValidationMessageFor(model => model.FechaReserva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Horario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Horario,
                   (SelectList)ViewBag.Horarios,
                   "Seleccione un horario",
                   htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Horario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reservar" class="btn btn-primary" />
                @Html.ActionLink("Regresar al listado", "IndexResidente", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


