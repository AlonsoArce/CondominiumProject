@model IEnumerable<Infraestructure.Models.Informacion>

@{
    ViewBag.Title = "Information";
}


<div id="lista">
    <p>
        <a href="@Url.Action("Create", "Informacion")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Información</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdInformacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdInformacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>

                <td>
                    <a href="@Url.Action("Edit", "Informacion", new { id = item.IdInformacion })" class="btn btn-primary"><i class="fa-solid fa-pen"></i> Editar</a>
                    @*<a href="@Url.Action("Details", "Informacion", new { id = item.IdInformacion })" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i> Detalle</a>*@
                </td>
            </tr>
        }

    </table>
</divid="lista">