@model IEnumerable<Infraestructure.Models.Incidencia>

@{
    ViewBag.Title = "Lista de Incidencias";
}
<div id="lista">
    <p>
        <a href="@Url.Action("Create", "Incidencia")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIncidencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoIncidencia)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIncidencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoIncidencia)
                </td>
            </tr>
        }

    </table>
</div>